{% extends "master/layout.twig" %}

{% block content %}
<div class="col-sm-6 col-sm-offset-3">
<form class="form-horizontal" method="post" action="{{ base_url }}master/login">
  <div class="form-group">
    <label for="username" class="col-sm-3 control-label">Usuario</label>
    <div class="col-sm-9">
      <input type="text" class="form-control" id="username" placeholder="Usuario" name="username">
    </div>
  </div>
  <div class="form-group">
    <label for="password" class="col-sm-3 control-label">Contraseña</label>
    <div class="col-sm-9">
      <input type="password" class="form-control" id="password" placeholder="Contraseña" name="password">
    </div>
  </div>
  {% if error %}
  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-9">
      <p class="text-danger">{{ error }}</p>
    </div>
  </div>
  {% endif %}
  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-9">
      <button type="submit" class="btn btn-default">Entrar al Administrador de Contenidos</button>
    </div>
  </div>
</form>
</div>
{% endblock %}
